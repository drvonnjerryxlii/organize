<h1>
  <a href="#<%= type %>" data-toggle="collapse" aria-expanded="false" aria-controls="<%= type %>">
    <%= t("headings.all", plural_model_name: t("resources.users.#{ type }")) %>
  </a>
</h1>

<div class="collapse" id="<%= type %>">
  <section class="col-xs-12">
    <h1 class="col-xs-12 visible-xs">
      <%= t("headings.all", plural_model_name: t("resources.users.#{ type }")) %>
    </h1>

    <div class="row">
    <% users.each_with_index do |user, index| %>
      <% if index % 3 == 0 %></div><div class="row"><% end %>
      <div class="item col-sm-4 col-xs-12">
        <div class="col-xs-12">
          <%= link_to user.name, user_path(user) %>
        </div>
        <% if user.github %>
          <div class="col-xs-12">
            <i class="fa fa-github"></i>
            <%= link_to user.github, "https://github.com/#{ user.github }" %>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>
  </section>
</div>
