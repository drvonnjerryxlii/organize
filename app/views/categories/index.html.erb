<section class="col-md-10 col-md-offset-1">
  <h1>
    <%= t("headings.all", plural_model_name: t("resources.category").pluralize) %>
    <small><%= link_to t("links.resources.create", model_name: t("resources.category")), new_category_path %></small>
  </h1>

  <div class="row">
  <% @categories.each_with_index do |category, index| %>
    <% if index % 3 == 0 %></div><div class="row"><% end %>
    <div class="item col-sm-4 col-xs-12">
      <div class="row">
        <div class="action-links col-sm-8 col-sm-offset-2 col-xs-12">
          <h4><%= category.name %></h4>
          <%= link_to t("links.resources.show"), category %>
          <%= link_to t("links.resources.edit"), edit_category_path(category) %>
          <%= link_to t("links.resources.delete"), category, method: :delete, data: { confirm: t("confirmations.delete") } %>
        </div>
      </div>
      <div class="category">
        <% ["hidden", "admin_only", "user_related", "topic_related"].each do |attr| %>
          <% if category[attr] %>
            <span class="badge"><%= t("attributes.#{ attr }") %></span>
          <% end %>
        <% end %>
        <%= category.description %>
      </div>
    </div>
  <% end %>
  </div>
</section>
