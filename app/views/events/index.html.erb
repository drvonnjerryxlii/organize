<h1><%= t("headings.all", plural_model_name: t("resources.event").pluralize) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("attributes.title") %></th>
      <th><%= t("attributes.description") %></th>
      <th><%= t("attributes.location") %></th>
      <th><%= t("attributes.start_time") %></th>
      <th><%= t("attributes.end_time") %></th>
      <th><%= t("attributes.google_event_id") %></th>
      <th><%= t("attributes.guest_lecture_id") %></th>
      <th><%= t("attributes.calendar_id") %></th>
      <th><%= t("attributes.admin_only") %></th>
      <th colspan="3"><%= t("resources.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.google_event_id %></td>
        <td><%= event.guest_lecture_id %></td>
        <td><%= event.calendar_id %></td>
        <td><%= event.admin_only %></td>
        <td><%= link_to t("links.resources.show"), event %></td>
        <td><%= link_to t("links.resources.edit"), edit_event_path(event) %></td>
        <td><%= link_to t("links.resources.delete"), event, method: :delete, data: { confirm: t("confirmations.delete") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("links.resources.create", model_name: t("resources.event")), new_event_path %>
