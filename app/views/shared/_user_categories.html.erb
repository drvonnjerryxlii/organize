<div class="row">
  <div class="form-group col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
    <%= f.label :categories %><br />
    <%= collection_check_boxes(form_name, :category_ids, Category.any_user_tags, :id, :name) do |b| %>
      <%= b.label class: "checkbox-inline" do %>
        <%= b.check_box + b.text %>
      <% end %>
    <% end %>
  </div>
</div>
