<h1><%= t("headings.all", plural_model_name: t("resources.user").pluralize) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("attributes.name") %></th>
      <th><%= t("attributes.email") %></th>
      <th><%= t("attributes.github") %></th>
      <th><%= t("attributes.type") %></th>
      <th><%= t("attributes.password_digest") %></th>
      <th colspan="3"><%= t("attributes.title") %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= link_to user.email, user_path(user) %></td>
        <td><%= link_to user.github, user_path(user) %></td>
        <td><%= link_to user.type, user_path(user) %></td>
        <td><%= link_to user.password_digest, user_path(user) %></td>
        <td><%= link_to t("links.resources.show"), user_path(user) %></td>
        <td><%= link_to t("links.resources.edit"), edit_user_path(user) %></td>
        <td><%= link_to t("links.resources.delete"), user_path(user), method: :delete, data: { confirm: t("confirmations.delete") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("links.resources.create", model_name: t("resources.user")), new_user_path %>
